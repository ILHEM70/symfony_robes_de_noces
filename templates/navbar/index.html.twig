{% block body %}
	<nav class="navbar">
		<div class="navbar-container">
			<a href="{{ path('app_home') }}" class="navbar-brand">
				<img src="{{ asset('assets/images/robes_de_noces.png') }}" alt="Logo">
			</a>

			<ul class="navbar-links">
				<li>
					<a href="{{ path('app_home') }}">Accueil</a>
