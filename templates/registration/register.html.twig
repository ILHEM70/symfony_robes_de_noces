{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="contenaire_registration">
		<h1>Inscription</h1>

		 {# Affichage des erreurs globales (facultatif)  #}
		<div class="errors">{{ form_errors(registrationForm) }}</div>

		{{ form_start(registrationForm) }}

		<div class="form">
			{{ form_row(registrationForm.lastname) }}
			<div class="errors">{{ form_errors(registrationForm.lastname) }}</div>

			{{ form_row(registrationForm.firstname) }}
			<div class="errors">{{ form_errors(registrationForm.firstname) }}</div>

			{{ form_row(registrationForm.email) }}
			<div class="errors">{{ form_errors(registrationForm.email) }}</div>

			{{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
			<div class="errors">{{ form_errors(registrationForm.plainPassword) }}</div>
            {# Confirmation du mot de passe #}
			{{ form_row(registrationForm.plainPasswordConfirm, {
                label: 'Confirmer le mot de passe'
            }) }}
			<div class="errors">{{ form_errors(registrationForm.plainPasswordConfirm) }}</div>

			<a href="{{path('app_cgv')}}"><b>Accepter les conditions générales</b><div>{{form_row(registrationForm.agreeTerms)}}</div></a>
			<div class="errors">{{ form_errors(registrationForm.agreeTerms) }}</div>

			<button type="submit" class="btn">S'inscrire</button>
		</div>

		{{ form_end(registrationForm) }}
	</div>
{% endblock %}


