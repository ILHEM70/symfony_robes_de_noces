{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block title %}Votre Panier
{% endblock %}

{% block body %}
	<h2>Votre Panier</h2>
	{% if panier is empty %}
		<p>Votre panier est vide.</p>
	{% else %}
		<ul>
			{% for item in panier %}
				<li>
					{{ item.name }}
					-
					{{ item.quantity }}
					x
					{{ item.price }}
					€ =
					{{ item.quantity * item.price }}
					€
					<a href="{{ path('cart_remove', {id: item.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
				</li>
			{% endfor %}
		</ul>
		<p>Total :
			{{ total }}
			€</p>
		<a href="{{ path('checkout') }}" class="btn btn-primary">Passer à la caisse</a>
	{% endif %}
{% endblock %}
