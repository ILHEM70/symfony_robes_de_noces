{% extends 'base.html.twig' %}

{% block title %}Votre Panier
{% endblock %}

{% block body %}
	<h2>Votre Panier</h2>
	{% if panier is empty %}
		<p>Votre panier est vide.</p>
	{% else %}
		<ul data-url="{{path('cart_remove')}}" id="data">

			{% for item in panier %}
				<li>
					{{ item.produit.nomDuProduit }}
					-
					{{ item.quantity }}
					x
					{{ item.produit.prix }}
					€ 
					<a href="" class="btn btn-danger btn-sm" onclick="removeFromCart(event,{{item.produit.id}})" class="removeElement">Supprimer</a>
				</li>
			{% endfor %}
		</ul>
		<p>Total :
			{{ total }}
			€</p>
		<a href="" class="btn btn-primary">Passer à la caisse</a>
	{% endif %}
{% endblock %}
